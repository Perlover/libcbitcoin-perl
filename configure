#!/bin/sh

PERLBUILDDIR=build
PERLEXEC=/usr/bin/perl


find ${PERLBUILDDIR} -name 'Makefile.PL'  | while read line; 
	do echo "running Makefile.PL $line";
	CURDIR=$(pwd)
	echo "Starting from $CURDIR"
	cd $(dirname $line)
	echo "Heading into $(pwd)"
	${PERLEXEC} ./Makefile.PL PREFIX=${CURDIR}/debian/libperl-cbitcoin/usr
	rm Makefile.old
	cd $CURDIR 
done;